<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Presentation.Views.DebugWindow"
        Title="DebugWindow"
        Icon="/Assets/avalonia-logo.ico"
		Width="600" Height="620"
		WindowStartupLocation="CenterScreen"
		CanResize="false">

	<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Spacing="48">
		<StackPanel>
			<TextBox x:Name="debugText"
				AcceptsReturn="True" TextWrapping="Wrap" Width="600" Height="200"
				Text="{Binding CopyBaseEventTitle}"/>
			<Button Click="OnClickGo">Go!</Button>
		</StackPanel>
	</StackPanel>
	
</Window>
